<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="odoo_data_migration.list">
      <field name="name">Migration List</field>
      <field name="model">odoo.data.migration</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="description"/>
          <field name="model_name"/>
          <field name="migration_function"/>
          <field name="migration_status" widget="badge" decoration-info="migration_status == 'queued'" decoration-success="migration_status == 'done'" decoration-danger="migration_status == 'failed'"/>
          <field name="running_method"/>
          <field name="migration_created_date"/>
          <field name="last_run"/>
        </tree>
      </field>
    </record>

    <record model="ir.ui.view" id="odoo_data_migration.form">
      <field name="name">Migration Form</field>
      <field name="model">odoo.data.migration</field>
      <field name="arch" type="xml">
        <form>
          <header>
            <button type="object" name="run_migration" string="Run Migration"/>
            <button type="object" name="requeue_migration" string="Requeue Migration"/>
            <button type="action" name="%(odoo_data_migration.reschedule_migration_wizard_action)d" string="Reschedule Cron"/>
            <field name="migration_status" widget="statusbar" statusbar_visible="queued,running,done,failed"/>
          </header>
          <sheet>
            <group>
              <group>
                <field name="name"/>
                <field name="description"/>
                <field name="model_name_relation"/>
                <field name="model_name"/>
                <field name="migration_function"/>
              </group>
              <group>
                <field name="running_method" widget="selection_badge"/>
                <field name="scheduled_running_time" attrs="{'readonly':[('running_method', '!=', 'cron_job')], 'invisible': [('running_method', '!=', 'cron_job')]}"/>
                <field name="ir_cron_reference" attrs="{'readonly':[(1, '=', 1)], 'invisible': [('running_method', '!=', 'cron_job')]}"/>
                <field name="last_run" attrs="{'readonly':[(1, '=', 1)]}"/>
              </group>
            </group>
            <group>
              <field name="error_traceback" attrs="{'readonly':[('id', '!=', False)]}"/>
            </group>
          </sheet>
        </form>
      </field>
    </record>

    <record id="batch_data_migration_action_server_triger" model="ir.actions.server">
        <field name="name">Batch Data Migration</field>
        <field name="type">ir.actions.server</field>
        <field name="model_id" ref="model_odoo_data_migration"/>
        <field name="binding_model_id" ref="model_odoo_data_migration"/>
        <field name="state">code</field>
        <field name="code">
          records.batch_migration()
        </field>
    </record>


    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="odoo_data_migration.action_window">
      <field name="name">Data Migration</field>
      <field name="res_model">odoo.data.migration</field>
      <field name="view_mode">tree,form</field>
    </record>


    <!-- server action to the one above -->
