-->

    <!-- Top menu item -->

    <menuitem name="Data Migration Tools"
    id="odoo_data_migration.menu_root"
    web_icon="odoo_data_migration,static/description/icon.png"/>

    <!-- menu categories -->

    <menuitem name="Data Migration" id="odoo_data_migration.menu_1" parent="odoo_data_migration.menu_root"/>
    <!-- actions -->

    <menuitem name="Data Migration" id="odoo_data_migration.menu_1_list" parent="odoo_data_migration.menu_1"
              action="odoo_data_migration.action_window"/>

  </data>
</odoo>